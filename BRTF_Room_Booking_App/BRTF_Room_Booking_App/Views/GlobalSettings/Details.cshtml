@model BRTF_Room_Booking_App.Models.GlobalSetting

@{
    ViewData["Title"] = "Global Settings";
}
@if (TempData["AlertMessage"] != null)
{
    <br />
    <div class="alert alert-success">
        @Html.Raw(TempData["AlertMessage"])
    </div>
    <br />
}
@if (TempData["Message"] != null)
{
    <br />
    <div class="alert alert-success">
        <strong>@Html.Raw(TempData["Message"])</strong>
    </div>
    <br />
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body style="background-color:#E4E6E6" class="justify-content-left">
    <br/>
    <h1 class="mb-4 text-center">Global Settings</h1>
    <br />
    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2); width: 70%; margin:auto" class="px-5 py-2 my-3">

    <br/>
        <h4 class="text-center">Details</h4>
    <br/>

    <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-6 text-right pt-2">
                        <label asp-for="StartOfTermDate" class="label"></label>
                    </div>
                    <div class="col-6 pt-2">
                        @Html.DisplayFor(model => model.StartOfTermDate)
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-right py-2">
                        <label asp-for="EndOfTermDate" class="label"></label>
                    </div>
                    <div class="col-6 py-2">
                        @Html.DisplayFor(model => model.EndOfTermDate)
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-right py-2">
                        <label asp-for="LatestAllowableFutureBookingDay" class="label"></label>
                    </div>
                    <div class="col-6 py-2">
                        @Html.DisplayFor(model => model.LatestAllowableFutureBookingDay)
                    </div>
                </div>
                <br/>
                    <h5  class="text-center">Email Settings</h5>
                <br/>
                    <div class="form-group form-check">
                        <label>
                            <input class="form-check-input" asp-for="EmailBookingNotificationsOverride" disabled="disabled" /> @Html.DisplayNameFor(model => model.EmailBookingNotificationsOverride)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label>
                            <input class="form-check-input" asp-for="PreventBookingNotificationsOverride" disabled="disabled" /> @Html.DisplayNameFor(model => model.PreventBookingNotificationsOverride)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label>
                            <input class="form-check-input" asp-for="EmailCancelNotificationsOverride" disabled="disabled" /> @Html.DisplayNameFor(model => model.EmailCancelNotificationsOverride)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label>
                            <input class="form-check-input" asp-for="PreventCancelNotificationsOverride" disabled="disabled" /> @Html.DisplayNameFor(model => model.PreventCancelNotificationsOverride)
                        </label>
                    </div>
            </div>
    </div>
    <br/>
    <div class="d-flex justify-content-center">
        <a asp-action="Edit" asp-route-id="@Model.ID" role="button" class="btn btn-primary mx-2 mb-4" style="width:100px;">Edit</a>
    </div>
    </section>
</body>