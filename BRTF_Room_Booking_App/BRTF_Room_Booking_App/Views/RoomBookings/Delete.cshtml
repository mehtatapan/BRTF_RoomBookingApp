@model BRTF_Room_Booking_App.Models.RoomBooking

@{
    ViewData["Title"] = "Delete";
}

<body style="background-color:#E4E6E6" class="align-items-center text-center justify-content-center">

    <h3>Delete Booking</h3>

    <section style="background-color: rgb(250, 250, 250);display: block;" class="px-5 py-2 my-3">
        <div>
            <h4>Are you sure you want to delete this booking?</h4>
        </div>
        <div class="container">

            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="UserID" class="control-label">Full Name:</label>
                </div>
                <div class="col-10">
                    <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="SpecialNotes" class="control-label">Special Notes:</label>
                </div>
                <div class="col-10">
                    <textarea asp-for="SpecialNotes" class="form-control" disabled></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="StartDate" class="control-label">Start:</label>
                </div>
                <div class="col-5">
                    <input asp-for="StartDate" class="form-control" disabled />
                </div>
                <div class="col-5">
                    <select asp-for="StartTimeID" class="form-control" asp-items="ViewBag.StartTimeID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="EndDate" class="control-label">End:</label>
                </div>
                <div class="col-5">
                    <input asp-for="EndDate" class="form-control" disabled />
                </div>
                <div class="col-5">
                    <select asp-for="EndTimeID" class="form-control" asp-items="ViewBag.EndTimeID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="Room.RoomGroupID" class="control-label">Area:</label>
                </div>
                <div class="col-10">
                    <select asp-for="Room.RoomGroupID" class="form-control" asp-items="ViewBag.RoomGroupID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="RoomID" class="control-label">Room:</label>
                </div>
                <div class="col-10">
                    <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID" size="4" disabled></select>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-2 text-right">
                    <label asp-for="RepeatType" class="control-label">Every:</label>
                </div>
                <div class="col-5">
                    <input asp-for="RepeatInterval" class="form-control" disabled />
                </div>
                <div class="col-5">
                    <select asp-for="RepeatType" class="form-control" disabled>
                        <option>None</option>
                        <option>Days</option>
                        <option>Weeks</option>
                        <option>Months</option>
                    </select>
                    <span asp-validation-for="RepeatType" class="text-danger"></span>
                </div>
            </div>
            <div class="container mt-3">
                <div class="row">
                    <div class="col">
                        <input type="checkbox" asp-for="Monday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Tuesday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Wednesday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Thursday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Friday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Saturday" style="width: 20px; height: 20px;" disabled />
                    </div>
                    <div class="col">
                        <input type="checkbox" asp-for="Sunday" style="width: 20px; height: 20px " disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="control-label">Mon</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Tue</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Wed</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Thu</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Fri</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Sat</label>
                    </div>
                    <div class="col">
                        <label class="control-label">Sun</label>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-2 text-right pt-2">
                        <label asp-for="RepeatEndDate" class="control-label">Repeat End Date:</label>
                    </div>
                    <div class="col-5">
                        <input asp-for="RepeatEndDate" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <div class="form-group mt-3">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" style="width:100px;" />
                <a asp-action="Index" role="button" class="btn btn-secondary mx-2" style="width:100px;">Back</a>
            </div>
        </form>
    </section>


</body>
