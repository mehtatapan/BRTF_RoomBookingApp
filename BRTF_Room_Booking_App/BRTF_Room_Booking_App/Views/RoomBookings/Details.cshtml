@model BRTF_Room_Booking_App.Models.RoomBooking

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body style="background-color:#E4E6E6" class="align-items-center text-center justify-content-center">

    <h3>Details</h3>

    <section style="background-color: rgb(250, 250, 250);display: block;" class="px-5 py-2 my-3">
        <div>
            <h4>Your Booking</h4>
        </div>
        <div class="container">

            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="UserID" class="label">Full Name:</label>
                </div>
                <div class="col-10">
                    <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="SpecialNotes" class="label">Special Notes:</label>
                </div>
                <div class="col-10">
                    <textarea asp-for="SpecialNotes" class="form-control" disabled></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="StartDate" class="label">Start:</label>
                </div>
                <div class="col-5">
                    <input asp-for="StartDate" class="form-control" disabled />
                </div>
                <div class="col-5">
                    <select asp-for="StartTimeID" class="form-control" asp-items="ViewBag.StartTimeID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label for="EndDate" class="label">End:</label>
                </div>
                <div class="col-5">
                    <input type="date" id="EndDate" name="EndDate" class="form-control" disabled />
                </div>
                <div class="col-5">
                    <select asp-for="EndTimeID" class="form-control" asp-items="ViewBag.EndTimeID" disabled></select>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="Room.RoomGroup.AreaName" class="label">Area:</label>
                </div>
                <div class="col-10">
                    @*<select asp-for="Room.RoomGroupID" class="form-control" asp-items="ViewBag.RoomGroupID" disabled></select>*@
                    <input asp-for="Room.RoomGroup.AreaName" class="form-control" disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-right pt-2">
                    <label asp-for="Room.RoomName" class="label">Room:</label>
                </div>
                <div class="col-10">
                    @*<select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID" disabled></select>*@
                    <input asp-for="Room.RoomName" class="form-control" disabled />
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <a asp-action="Edit" asp-route-id="@Model.ID" role="button" class="btn btn-primary mx-2" style="width:100px;">Edit</a>
            <a asp-action="Index" role="button" class="btn btn-secondary mx-2" style="width:100px;">Back</a>
        </div>
    </section>
</body>
@section Scripts {
    <script type="text/javascript">
        // Reload certain input fields when page loads
        $(document).ready(function () {
            // Fill end date display field. (Note: This end date is only used as a display. It does not save data)
            var date = $('#StartDate')[0].valueAsDate;
            if ($("#EndTimeID option:selected").text().toLowerCase().includes("end"))
                date.setDate(date.getDate() + 1);
            $('#EndDate')[0].valueAsDate = date;

            // Write "None." if there are no Special Notes
            var specialNotes = $.trim($("#SpecialNotes").val());
            if (specialNotes == "") {
                $("textarea#SpecialNotes").val("None.");
            }
        });
    </script>
}
