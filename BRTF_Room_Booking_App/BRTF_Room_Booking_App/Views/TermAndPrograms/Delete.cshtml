@model BRTF_Room_Booking_App.Models.TermAndProgram

@{
    ViewData["Title"] = "Delete Term & Program";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body class="justify-content-center">
    <br />
    <h1 class="mb-4 text-center">Delete</h1>
    <br />

    <div class="container-fluid d-block d-lg-none" style="display:block;">
        <div class="card-deckwrapper">
            <div class="card-deck">
                <div class="card mb-sm-3" style="min-width: 18rem;">
                    <h5 class="card-header text-center">Are you sure you want to delete this Term and Program?</h5>
                    <div class="card-body">
                        <div class="media-body ml-2">
                            <div class="card-text mb-3"><strong>Program Name: </strong> @Html.DisplayFor(model => model.ProgramName)</div>
                            <div class="card-text mb-3"><strong>Program Code: </strong> @Html.DisplayFor(model => model.ProgramCode)</div>
                            <div class="card-text mb-3"><strong>Term: </strong> @Html.DisplayFor(model => model.ProgramLevel)</div>
                            <div class="card-text"><strong>User Group: </strong> @Html.DisplayFor(model => model.UserGroup.UserGroupName)</div>
                            <br />
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <form asp-action="Delete" class="d-flex justify-content-center">
                                <input type="hidden" asp-for="ID" />
                                <input type="submit" value="Delete" class="btn btn-danger mx-1" style="width:100px;" />
                                <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-1">Back to Terms and Programs</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2); width: 60%; margin:auto" class="px-5 py-2 my-3 d-none d-lg-block">
            <div>
                <br />
                <h4 class="text-center">Are you sure you want to delete this Term and Program?</h4>
                <br />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="row">
                        <div class="col-6 text-right pt-2">
                            <label asp-for="ProgramName" class="label"></label>
                        </div>
                        <div class="col-6 py-2">
                            @Html.DisplayFor(model => model.ProgramName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-right pt-2">
                            <label asp-for="ProgramCode" class="label"></label>
                        </div>
                        <div class="col-6 pt-2">
                            @Html.DisplayFor(model => model.ProgramCode)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-right pt-2">
                            <label asp-for="ProgramLevel" class="label"></label>
                        </div>
                        <div class="col-6 pt-2">
                            @Html.DisplayFor(model => model.ProgramLevel)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-right pt-2">
                            <label asp-for="UserGroupID" class="label"></label>
                        </div>
                        <div class="col-6 pt-2">
                            @Html.DisplayFor(model => model.UserGroup.UserGroupName)
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="d-flex justify-content-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger mx-2" style="width:100px;" />
                    <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-2">Back to Terms and Programs</a>
                </form>
            </div>
            <br />
        </section>
    </div>
</body>
