@model BRTF_Room_Booking_App.Models.TermAndProgram

@{
    ViewData["Title"] = "Edit Term & Program";
}
<body style="background-color:#E4E6E6" class="justify-content-left">
    <h1 class="mb-4">Edit Room Group</h1>

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2);" class="px-5 py-2 my-3">
        <div>
            <br />
            <h4>Edit this Term & Program</h4>
            <br />
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <strong><label asp-for="ProgramName" class="control-label"></label></strong>
                        <input asp-for="ProgramName" class="form-control" />
                        <span asp-validation-for="ProgramName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <strong><label asp-for="ProgramCode" class="control-label"></label></strong>
                        <input asp-for="ProgramCode" class="form-control" />
                        <span asp-validation-for="ProgramCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <strong><label asp-for="ProgramLevel" class="control-label"></label></strong>
                        <input asp-for="ProgramLevel" class="form-control" />
                        <span asp-validation-for="ProgramLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <strong><label asp-for="UserGroupID" class="control-label"></label></strong>
                        <select asp-for="UserGroupID" class="form-control" asp-items="ViewBag.UserGroupID"></select>
                        <span asp-validation-for="UserGroupID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" style="width:100px;" />
                        <a asp-action="Index" role="button" class="btn btn-secondary mx-2" style="width:100px;">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
