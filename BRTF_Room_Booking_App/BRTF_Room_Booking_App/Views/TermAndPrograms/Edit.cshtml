@model BRTF_Room_Booking_App.Models.TermAndProgram

@{
    ViewData["Title"] = "Edit Term & Program";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="justify-content-center">
    <br/>
    <h1 class="mb-4 text-center">Edit</h1>
    <br/>

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2); width: 60%; margin:auto" class="px-5 py-2 my-3">
        <div>
            <br />
            <h4 class="text-center">Edit this Term and Program</h4>
            <br />
        </div>
        <form asp-action="Edit">
            <div class="row justify-content-center">
                <div class="col-lg-8">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="ProgramName" class="label">Program Name: *</label>
                        <input asp-for="ProgramName" class="form-control" />
                        <span asp-validation-for="ProgramName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProgramCode" class="label">Program Code: *</label>
                        <input asp-for="ProgramCode" class="form-control" />
                        <span asp-validation-for="ProgramCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProgramLevel" class="label">Program Level: *</label>
                        <input asp-for="ProgramLevel" class="form-control" />
                        <span asp-validation-for="ProgramLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserGroupID" class="label">User Group: *</label>
                        <select asp-for="UserGroupID" class="form-control" asp-items="ViewBag.UserGroupID"></select>
                        <span asp-validation-for="UserGroupID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br/>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-primary mx-2" style="width:100px;" />
                <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-2">Back to Terms and Programs</a>
            </div>
            <br/>
        </form>
    </section>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
