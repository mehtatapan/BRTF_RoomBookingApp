@model BRTF_Room_Booking_App.Models.User

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body style="background-color:#E4E6E6" class="justify-content-left">
    <br />
    <h1 class="mb-4 text-center">Delete User</h1>
    <br />

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2);" class="px-5 py-2 my-3">
        <div>
            <br />
            <h4 class="text-center">Are you sure you want to delete this User?</h4>
            <br />
        </div>
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="Username" class="label">Username</label>
                        </div>
                        <div class="col-5 pt-2">
                            @Html.DisplayFor(model => model.Username)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="FirstName" class="label"></label>
                        </div>
                        <div class="col-5 pt-2">
                            @Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="MiddleName" class="label"></label>
                        </div>
                        <div class="col-5 pt-2">
                            @Html.DisplayFor(model => model.MiddleName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="LastName" class="label"></label>
                        </div>
                        <div class="col-5 pt-2">
                            @Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="Email" class="label"></label>
                        </div>
                        <div class="col-5 pt-2">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-check">
                        <label class="label">
                            <input class="form-check-input" asp-for="EmailBookingNotifications" disabled="disabled" /> @Html.DisplayNameFor(model => model.EmailBookingNotifications)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="label">
                            <input class="form-check-input" asp-for="EmailCancelNotifications" disabled="disabled" /> @Html.DisplayNameFor(model => model.EmailCancelNotifications)
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label asp-for="TermAndProgramID" class="label"></label>
                        </div>
                        <div class="col-8 pt-2">
                            @Html.DisplayFor(model => model.TermAndProgram.TermAndProgramSummary)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right pt-2">
                            <label for="Role" class="label">Role</label>
                        </div>
                        <div class="col-5 pt-2">
                            @ViewBag.Role
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" style="width:100px;" />
            <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-2">Back to Users</a>
        </form>
        </div>
        <br />
    </section>
</body>
