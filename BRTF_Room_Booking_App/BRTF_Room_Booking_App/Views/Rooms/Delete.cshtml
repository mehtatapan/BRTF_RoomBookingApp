
@model BRTF_Room_Booking_App.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}
<body style="background-color:#E4E6E6" class="justify-content-left">
    <h1 class="mb-4">Delete Room</h1>

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2);" class="px-5 py-2 my-3">
        <div>
            <br />
            <h4>Are you sure you want to delete this Room?</h4>
            <br />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="colform-group">
                    <strong><label asp-for="RoomGroupID" class="control-label">Area</label></strong>
                    <select asp-for="RoomGroupID" class="form-control" asp-items="ViewBag.RoomGroupID" disabled></select>
                </div>
                <div class="form-group">
                    <strong><label asp-for="RoomName" class="control-label"></label></strong>
                    <input asp-for="RoomName" class="form-control" disabled />
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="RoomMaxHoursTotal" class="control-label"></label></strong>
                    <input asp-for="RoomMaxHoursTotal" class="form-control" disabled />
                    <span asp-validation-for="RoomMaxHoursTotal" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <strong>
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Enabled" disabled /> @Html.DisplayNameFor(model => model.Enabled)
                    </label>
                    </strong>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger mx-2" style="width:100px;" />
                    <a asp-action="Index" class="btn btn-secondary mx-2" style="width:100px;">Back</a>
                </form>
            </div>
        </div>
        </section>
    </body>
