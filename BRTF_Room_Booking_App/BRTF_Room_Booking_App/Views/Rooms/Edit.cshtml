
@model BRTF_Room_Booking_App.Models.Room
@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="colform-group">
                <label asp-for="RoomGroupID" class="control-label">Area:</label>
                <select asp-for="RoomGroupID" class="form-control" asp-items="ViewBag.RoomGroupID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomMaxHoursTotal" class="control-label"></label>
                <input asp-for="RoomMaxHoursTotal" class="form-control" />
                <span asp-validation-for="RoomMaxHoursTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mx-2" style="width:100px;" />
                <a asp-action="Index"class="btn btn-secondary mx-2" style="width:100px;">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
