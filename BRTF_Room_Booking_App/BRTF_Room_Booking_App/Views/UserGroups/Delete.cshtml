@model BRTF_Room_Booking_App.Models.UserGroup

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body style="background-color:#E4E6E6" class="align-items-center text-center justify-content-center">

    <br />
    <h1 class="mb-4">Delete</h1>
    <br />

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2);" class="px-5 py-2 my-3">
        <div>
            <br />
            <h3>Are you sure you want to delete this User Group?</h3>
            <br />
        </div>
        <div class="d-flex justify-content-center">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <dl class="row">
                    <dt class="col-6 text-right">
                        @Html.DisplayNameFor(model => model.UserGroupName)
                    </dt>
                    <dd class="col-6 text-left">
                        @Html.DisplayFor(model => model.UserGroupName)
                    </dd>
                    <dt class="col-6 text-right">
                        @Html.DisplayNameFor(model => model.RoomUserGroupPermissions)
                    </dt>
                    <dd class="col-6 text-left">
                        @foreach (var r in Model.RoomUserGroupPermissions)
                        {
                            @r.RoomGroup.AreaName <br />
                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <br />
                    <div class="form-group mt-3">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" style="width:100px;" />
                        <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-2" style="width:100px;">Back</a>
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </section>
</body>