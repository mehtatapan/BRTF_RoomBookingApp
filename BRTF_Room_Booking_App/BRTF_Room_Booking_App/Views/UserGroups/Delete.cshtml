@model BRTF_Room_Booking_App.Models.UserGroup

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body style="background-color:#E4E6E6" class="justify-content-left">

    <br />
    <h1 class="mb-4">Delete</h1>
    <br />

    <section style="background-color: #FFF;display: block; border-radius: 8px; box-shadow: 0 15px 25px rgba(0,0,50,0.2);" class="px-5 py-2 my-3">
        <div>
            <br />
            <h3>Are you sure you want to delete this User Group?</h3>
            <br />
        </div>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-4 text-right pt-2">
                        <strong><label asp-for="UserGroupName" class="label"></label></strong>
                    </div>
                    <div class="col-5 pt-2">
                        @Html.DisplayFor(model => model.UserGroupName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 text-right pt-2">
                        <strong><label class="label">Room Group Permissions</label></strong>
                    </div>
                    <div class="col-5 pt-2">
                        @foreach (var r in Model.RoomUserGroupPermissions)
                        {
                            @r.RoomGroup.AreaName <br />
                        }
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="Delete">
            <br />
            <div>
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" style="width:100px;" />
                <a href='@ViewData["returnURL"]' role="button" class="btn btn-secondary mx-2">Back to User Groups</a>
            </div>
            <br />
        </form>
    </section>
</body>